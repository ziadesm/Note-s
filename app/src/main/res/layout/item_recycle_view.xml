<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/item_recycler_controller"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/darker_gray"
    card_view:cardBackgroundColor="@android:color/black"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recycle_image_view"
            android:layout_width="95dp"
            android:layout_height="85dp"
            android:layout_gravity="center|start"
            android:layout_margin="8dp"
            android:background="@drawable/recycle_circle_image_view"
            android:contentDescription="@string/todo_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycle_title_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3.5dp"
                android:layout_weight="0.5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recycle_date_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3.5dp"
                android:layout_weight="0.38"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/recycle_time_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3.5dp"
                android:layout_weight="0.28"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>